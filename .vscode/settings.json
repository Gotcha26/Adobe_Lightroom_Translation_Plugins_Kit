{
  // ============================================================================
  // CONFIGURATION WORKSPACE POUR CLAUDE CODE
  // ============================================================================
  // Ce fichier configure VSCode pour travailler avec Claude Code (plugin IA)
  // Il doit être placé dans .vscode/settings.json à la RACINE du projet

  // ----------------------------------------------------------------------------
  // CLAUDE CODE - Configuration modèle IA
  // ----------------------------------------------------------------------------
  "claude.model": "claude-sonnet-4-20250514",
  // Modèle recommandé pour refactorisation (équilibre vitesse/qualité)
  // Alternatives: "claude-opus-4-20250514" (plus puissant mais plus lent)

  "claude.maxTokens": 8000,
  // Limite de tokens par réponse (8000 = réponses détaillées)
  // Augmenter si besoin de fichiers très longs

  "claude.temperature": 0.3,
  // Créativité du modèle (0.0 = déterministe, 1.0 = créatif)
  // 0.3 = optimal pour code (précis mais flexible)

  // ----------------------------------------------------------------------------
  // PYTHON - Configuration linting et formatage
  // ----------------------------------------------------------------------------
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": false,

  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length=88"
  ],

  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // ----------------------------------------------------------------------------
  // FICHIERS - Exclusions pour performance
  // ----------------------------------------------------------------------------
  "files.watcherExclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.git": true,
    "**/.pytest_cache": true,
    "**/__i18n_kit__": true,
    "**/node_modules": true
  },

  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true
  },

  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/__i18n_kit__": true,
    "**/node_modules": true
  },

  // ----------------------------------------------------------------------------
  // ÉDITEUR - Règles générales
  // ----------------------------------------------------------------------------
  "editor.rulers": [80, 88, 120],
  "editor.renderWhitespace": "boundary",
  "editor.trimAutoWhitespace": true,

  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // ----------------------------------------------------------------------------
  // GIT - Configuration pour commits propres
  // ----------------------------------------------------------------------------
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,

  // ----------------------------------------------------------------------------
  // TERMINAL - Configuration
  // ----------------------------------------------------------------------------
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.defaultProfile.linux": "bash",

  // ----------------------------------------------------------------------------
  // CLAUDE CODE - Contexte et comportement
  // ----------------------------------------------------------------------------
  "claude.contextFiles": [
    ".claude/refactor-instructions.md",
    "README.md",
    "common/paths.py"
  ],
  // Fichiers à inclure automatiquement dans le contexte de Claude

  "claude.autoSuggest": true,
  // Suggestions automatiques pendant l'édition

  "claude.showInlineCompletions": true
  // Autocomplétion inline avec Claude
}
